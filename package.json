        "@electron-forge/maker-zip": "^6.0.0-beta.64",
        "@electron-forge/plugin-webpack": "^6.0.0-beta.64",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
