{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"target": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declaration": true
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}
